import java.util.ArrayList;
import java.util.List;

public class ArrayListDemo {
    public static List<String> arrayList;
    public static void init() {
        //初始化
        arrayList = new ArrayList<String>(4);
        System.out.println(arrayList.size());
        //添加元素
        arrayList.add("first");
        arrayList.add("second");
        arrayList.add("three");
        arrayList.add("four");

    }

    //打印信息
    public static void printInfo() {



        System.out.println(arrayList.size());
        //通过集合构造链表
        ArrayList<String> arrayList2 = new ArrayList<String>(arrayList);

        System.out.println("arrayList" + arrayList);
        System.out.println("arrayList2" + arrayList2);


    }

    //修改，删除
    public static void modify(){
        arrayList.add(1,"insert data");
        System.out.println("插入后长度："+arrayList.size());
        arrayList.remove("second");
        System.out.println("删除后长度："+arrayList.size());
        arrayList.remove(3);
        System.out.println("删除第三个元素后长度"+arrayList.size());

    }
//遍历
    public static void toArray(){
        Object[] arr=arrayList.toArray();
        for(int i=0;i<arr.length;i++)
        {
            String str=(String) arr[i];
            System.out.println((i+1)+":"+str);

        }
    }

    public static void main(String args[]) {

        init();
        printInfo();
        modify();
        toArray();


    }
}

